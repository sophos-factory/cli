{
  "name": "@sophos-factory/cli",
  "version": "4.0.1",
  "description": "Sophos Factory CLI",
  "main": "dist/main.js",
  "author": "Sophos Factory",
  "license": "MIT",
  "files": [
    "bin",
    "dist/main.runtime.js",
    "package.json",
    "LICENSE",
    "README.md",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "factoryctl": "./bin/factoryctl.js"
  },
  "scripts": {
    "format": "prettier -w src/**/*.ts",
    "lint:fix": "eslint src tests bin --fix",
    "lint": "eslint src tests bin",
    "watch": "cross-env NODE_ENV=development BUILD_TARGET=runtime rollup -c --bundleConfigAsCjs -w src/main.ts",
    "build:runtime": "cross-env BUILD_TARGET=runtime rollup -c --bundleConfigAsCjs",
    "build:aot": "cross-env BUILD_TARGET=aot rollup -c --bundleConfigAsCjs",
    "build:exe:alpine": "pkg dist/main.bundled.js -o dist/factoryctl-alpine -t node16-alpine-x64",
    "build:exe:win": "pkg dist/main.bundled.js -o dist/win/factoryctl -t node16-win-x64",
    "build:exe:linux": "pkg dist/main.bundled.js -o dist/linux/factoryctl -t node16-linux-x64",
    "build:exe:macos": "pkg dist/main.bundled.js -o dist/macos/factoryctl -t node16-macos-x64",
    "test:unit": "jest ./src",
    "test:int": "jest ./tests --runInBand",
    "pre-commit": "run-p build:aot test:unit test:int lint:fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sophos-factory/api-client": "3.2.0",
    "cli-table": "^0.3.4",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^7.2.0",
    "lodash": "^4.17.20",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/types": "^29.3.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.2.0",
    "@types/cli-table": "^0.3.0",
    "@types/debug": "^4.1.5",
    "@types/flat": "^5.0.1",
    "@types/jest": "^29.2.4",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.166",
    "@types/yargs": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "faker": "^5.5.3",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.0",
    "prettier": "^2.2.1",
    "rollup": "^3.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.3"
  }
}
