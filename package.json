{
  "name": "@sophos-factory/cli",
  "version": "2.0.4",
  "description": "Sophos Factory CLI",
  "main": "dist/main.js",
  "author": "Sophos Factory",
  "license": "MIT",
  "files": [
    "bin",
    "dist/main.runtime.js",
    "package.json",
    "LICENSE",
    "README.md",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "refactrctl": "./bin/refactrctl.js"
  },
  "scripts": {
    "format": "prettier -w src/**/*.ts",
    "lint:fix": "eslint src e2e bin --fix",
    "lint": "eslint src e2e bin",
    "watch": "cross-env NODE_ENV=development BUILD_TARGET=runtime rollup -c -w src/main.ts",
    "build:runtime": "cross-env BUILD_TARGET=runtime rollup -c",
    "build:aot": "cross-env BUILD_TARGET=aot rollup -c",
    "build:exe:alpine": "pkg dist/main.bundled.js -o dist/refactrctl-alpine -t node14-alpine-x64",
    "build:exe:win": "pkg dist/main.bundled.js -o dist/win/refactrctl -t node14-win-x64",
    "build:exe:linux": "pkg dist/main.bundled.js -o dist/linux/refactrctl -t node14-linux-x64",
    "build:exe:macos": "pkg dist/main.bundled.js -o dist/macos/refactrctl -t node14-macos-x64",
    "test:unit": "jest --testRegex=\"src/.*\\.test\\.(js|ts)$\"",
    "test:e2e": "jest --testRegex=\"e2e/.*\\.test\\.(js|ts)$\" --bail --runInBand",
    "pre-commit": "run-p build:aot test:unit test:e2e lint:fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sophos-factory/api-client": "^1.0.1",
    "cli-table": "^0.3.4",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "js-yaml": "^3.14.1",
    "jsonpath-plus": "^4.0.0",
    "lodash": "^4.17.20",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@jest/types": "^26.6.2",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/axios": "^0.14.0",
    "@types/cli-table": "^0.3.0",
    "@types/date-fns": "^2.6.0",
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.1.5",
    "@types/flat": "^5.0.1",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.166",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.22.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.1.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
